<h1 class="ls-title-intro ls-ico-role">Roles</h1>

<a><%= link_to 'Cadastrar Repositório', new_repository_path(@repositories) , class: "ls-btn-primary" %></a>

<table class="ls-table ls-table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Repositório</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
    <tr>
      <td><%= repository.name %></td>
      <td><%= repository.description %></td>
      <td><%= repository.visibility %></td>
      <td><%= repository.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>

